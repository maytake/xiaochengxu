/**index.wxss**/

.search-log {
  margin: 110rpx 0 70rpx;
  text-align: center;
}

.search-img {
  width: 136rpx;
  height: 136rpx;
  margin-bottom: 15rpx;
}

.search-text {
  display: block;
  font-size: 46rpx;
  color: #e50012;
  font-weight: bold;
}

.search-section {
  padding: 0 30rpx;
}
.search-description-text{
  font-size: 14px;
}
.search-input-wrapper {
  width: 100%;
  box-sizing: border-box;
  padding-right: 80rpx;
  position: relative;
}

.search-input {
  border: 1px solid #999;
  border-right: none;
  padding: 16rpx 20rpx;
  font-size: 14px;
  border-radius: 3px 0 0 3px;
  color: #333;
  background: #f5f5f5;
}



.search-clear {
  position: absolute;
  right: 110rpx;
  top: 0px;
  z-index: 100;
  height: 100%;
  padding: 0 3px;
  vertical-align: middle;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-clear-icon {
  width: 32rpx;
  height: 32rpx;
}

.search-btn {
  position: absolute;
  right: 0;
  top: 0;
  z-index: 100;
  height: 100%;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 90rpx;
  background: #e50012;
   border-radius:0 3px 3px 0;
}

.search-btn-icon {
  width: 36rpx;
  height: 36rpx;
}

.search-description{
  margin-top: 20rpx;
  color: #999;
  font-size: 12px;
  text-align: center;
}
.search-hint{
  margin-top: 120rpx;
  text-align: center;
}
.search-hint-icon{
  width: 207rpx;
  height: 135rpx;
  margin: 0 auto;
  display: block;
}
.search-hint-text{
  display: block;
  margin-top: 23rpx;
  font-size: 14px;
  text-align: center;
  color: #999;
}